<h3>Complete your registration</h3>

<form id="registerForm" method="post" action="@Url.Action("Register", "QrPayment")">
    <input type="hidden" name="phone" value="@ViewBag.Phone" />

    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Enter your full name" required />
        <small id="nameError" class="text-danger d-none">⚠️ Please enter a valid name (letters only).</small>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="example@email.com" required />
        <small id="emailError" class="text-danger d-none">⚠️ Please enter a valid email address.</small>
    </div>

    <button type="submit" class="btn btn-success mt-3 w-100">Register</button>
</form>

@section Scripts {
    <script>
        // Attach the validation from validation.js
        attachValidation("registerForm", {
            email: { inputId: "email", errorId: "emailError" },
            name: { inputId: "name", errorId: "nameError" }
        });
    </script>
}
