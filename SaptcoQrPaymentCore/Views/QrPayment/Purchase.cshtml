@{
    ViewData["Title"] = "Saptco QR Payment";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Saptco QR Payment</h2>

    <!-- ✅ If the user's phone number is already stored -->
    @if (ViewBag.Phone != null)
    {
        <div class="alert alert-info text-center">
            <strong>Phone:</strong> @ViewBag.Phone
        </div>

        <!-- 🟢 Proceed directly to payment -->
        <form method="post" action="@Url.Action("ExecutePurchase", "QrPayment")" class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg">Proceed to Payment</button>
        </form>
    }
    else
    {
        <!-- 🔹 If no phone number is stored yet, ask for it -->
        <form method="post" action="@Url.Action("SavePhone", "QrPayment")" class="col-md-6 mx-auto mt-3">
            <div class="form-group mb-3">
                <label for="phone" class="form-label"><strong>Enter your phone number:</strong></label>
                <input type="text" name="phone" id="phone" class="form-control" placeholder="05XXXXXXXX" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">OK</button>
        </form>
    }

    <!-- ⚠️ Display error message if any -->
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-4 text-center">
            @ViewBag.Error
        </div>
    }

    <!-- ✅ Show success message if payment was initialized -->
    @if (ViewBag.Success != null && ViewBag.Success == true)
    {
        <div class="alert alert-success mt-4 text-center">
            ✅ Payment initialized successfully!
        </div>
    }

    <!-- 🧾 If the phone number is new, ask user to complete registration -->
    @if (ViewBag.NewUser != null && ViewBag.NewUser == true)
    {
        <h3 class="mt-4">Complete your registration</h3>

        <form method="post" action="@Url.Action("Register", "QrPayment")" class="col-md-6 mx-auto mt-3">
            <input type="hidden" name="phone" value="@ViewBag.Phone" />

            <div class="form-group mb-3">
                <label>Name</label>
                <input type="text" name="name" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Register</button>
        </form>
    }
</div>
